---
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";
const today = new Date();
---

<footer class="bg-[#e7d8c3] mt-12 flex flex-col items-center justify-center py-10 text-stone-800">
  <div class="site-container">

    <!-- Navegación -->
    <div class="flex w-full flex-col items-center justify-between gap-2 text-lg md:grid md:grid-cols-5">
      <div class="flex justify-center py-2 text-center md:hidden">
        <SiteLogo />
      </div>
    </div>

    <!-- Mensaje personalizado -->
    <div class="description mx-auto mt-6 max-w-[24rem] px-4 text-center text-stone-700 text-sm">
      <p>
        <span class="italic text-stone-600">Gracias por formar parte de este día tan especial.</span><br />
        ¡Nos vemos el <span class="font-semibold text-amber-700">15 de mayo de 2026</span>!
      </p>
    </div>

    <!-- Créditos -->
    <div class="mt-6 mb-2 text-center text-sm text-stone-600">
      &copy; {today.getFullYear()} <a href="https://bodanoeliajuanjo.es" class="hover:text-amber-700 transition">bodanoeliajuanjo.es</a> —
      Con <span class="text-amber-500">❤️</span> por Juanjo & Noelia
    </div>
  </div>
</footer>
